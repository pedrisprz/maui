<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OrgaNice.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OrgaNice"
    Shell.FlyoutBehavior="Flyout"
    Title="OrgaNice">

    <FlyoutItem Title="Home" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Inicio"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
            Icon="dotnet_bot.png"/>

        <ShellContent
            Title="Tareas"
            ContentTemplate="{DataTemplate local:TasksPage}"
            Route="MainPage"
            Icon="dotnet_bot.png"/>

        <ShellContent
            Title="Usuarios"
            ContentTemplate="{DataTemplate local:UserPage}"
            Route="MainPage"
            Icon="dotnet_bot.png"/>

        <ShellContent
            Title="Opciones"
            ContentTemplate="{DataTemplate local:OptionsPage}"
            Route="MainPage"
            Icon="dotnet_bot.png"/>

    </FlyoutItem>
    
    

</Shell>
